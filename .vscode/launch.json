  "version": "0.2.0",
  "configurations": [
    {
      "name": "Docker: Attach to Node",
      "port": 9229,
      "request": "attach",
      "type": "node", 
      "address": "localhost", 
      "remoteRoot": "/src/",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMapPathOverrides": {
        "/usr/app/*": "${workspaceRoot}/*"
      }
    }
  ]
}