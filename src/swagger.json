{
  "openapi": "3.0.0",
  "info": {
    "title": "RentalX Documentation",
    "description": "This is an API to provide rental capabilities",
    "version": "1.0.0",
    "contact": {
      "email": "gtk.labs@gmail.com"
    }
  },
  "paths": {
    "/categories": {
      "post": {
        "tags": ["Category"],
        "summary": "Create a category",
        "description": "Create a new category",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "category-name-sample",
                  "description": "category-description"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Category already exists"
          }
        }
      }, 
      "get": {
        "tags": ["Category"], 
        "summary": "List categories", 
        "description": "Retrieve a list of categories", 
        "responses": {
          "200": {
            "description": "Success", 
            "content": {
              "application/json": {
                "schema": {
                  "type": "array", 
                  "items": {
                    "type": "object", 
                    "properties": {
                      "name": {
                        "type": "string"
                      }, 
                      "description": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}